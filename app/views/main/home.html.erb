<div ng-controller='MainController' ng-init='init()'>

<section class='background-homepage'>
  <div class='map-image'></div>
  <div class='map-filter-image' ng-style='getFilteredBg()'></div>
</section>

<header>
  <div class='header-wrap'>
    <ul class='left-side'>
      <li><a href='/'><%= image_tag('lndmrk_logo.png',class: 'header-logo', width: '133', alt: 'LNDMRK') %></a></li> 
      <li><a class='link-1'><%= t 'how_it_works' %></a></li>
      <li><a class='link-2'><%= t 'about' %></a></li>
      <li><a class='link-3'><%= t 'learning' %></a></li>
    </ul>
    <ul class='right-side'>
      <li ng-click='toggleLocalization("en")'><a class='link-4 en' ng-class='localization === "en" ? "on" : ""'></a></li>
      <span class='v-strip'>|</span>
      <li ng-click='toggleLocalization("heb")'><a class='link-5 heb' ng-class='localization === "heb" ? "on" : ""'></a></li>
      <li><a class='link-6' href='/dashboard'><%= t 'login' %></a></li>
      <li class='invest-wrap'><a class='invest'><%= t 'invest.title' %></a></li>
    </ul>
  </div>
</header>

<section class='hero-map'>
  <h1 class='title'> <%= t 'map_title' %> </h1>
  <div class='hero-map-container'>
    <div class='filters-container'>
      <div class='filter income'
           ng-click='toggleFilter("income")'
           ng-class='{"active": mapFilters.income}'><%= 'income' %></div>
      <div class='filter growth'
           ng-click='mapFilters.growth = !mapFilters.growth'
           ng-class='{"active": mapFilters.growth}'><%= 'growth' %></div>
      <div class='filter income-growth'
           ng-click='mapFilters.incomeGrowth = !mapFilters.incomeGrowth'
           ng-class='{"active": mapFilters.incomeGrowth}'><%= 'income_growth' %></div>
    </div>
    <div class='search-container'>
      <input type="text" class='search' placeholder='Search address, city, state.'>
    </div>
    <div class='search-info'>
      <h1 class='search-button'><%= 'search' %></h1>
    </div>
  </div>
</section>

<section-carousel class='carousel-directive' assets='assets' pagination='pagination'></section-carousel>

<section class='how-it-works'>
  <div class='container'>
    <div class='line'></div>
    <div class='title'><%= t 'how_it_works' %></div>
    <div class='row-wrap'>
      <div class='info'>
        <div class='image search'></div>
        <div class='info-title'><%= t 'search_properties.title' %></div>
        <div class='text'>
          <p><%= raw t 'search_properties.part_1' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'search_properties.part_2' %></p>
        </div>
      </div>
      <div class='info'>
        <div class='image invest'></div>
        <div class='info-title'><%= t 'invest.title' %></div>
        <div class='text'>
          <p><%= raw t 'invest.part_1' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'invest.part_2' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'invest.part_3' %></p>        
        </div>
      </div>
      <div class='info'>
        <div class='image recieve'></div>
        <div class='info-title'><%= t 'recieve_income.title' %>e</div>
        <div class='text'>
          <p><%= raw t 'recieve_income.part_1' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'recieve_income.part_2' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'recieve_income.part_3' %></p>        
        </div>
      </div>
      <div class='info exit'>
        <div class='image exit'></div>
        <div class='info-title'><%= t 'exit.title' %></div>
        <div class='text'>
          <p><%= raw t 'exit.part_1' %></p>
          <div id='diamond'></div>
          <p><%= raw t 'exit.part_2' %></p>     
        </div>
      </div>
    </div>
  </div>
</section>

<section class='statistics'>
  <div class='container'>
    <div class='column'>
      <h3><%= t 'income_destributed' %></h3>
      <div class='icon distributed'></div>
      <h1>$2,578</h1>
    </div>
    <div class='column'>
      <h3>M&sup2; in lndmrk</h3>
      <div class='pie-area'>
        <div class='pie-image'></div>
        <h2>453M</h2>
        <h4 class='growth'><%= t 'growth' %></h4>
        <h4 class='income'><%= t 'income' %></h4>
        <h4 class='income-growth'><%= t 'income_growth' %></h4>
        <%= image_tag('line.png',class: 'line growth', width: '90', alt: '') %>
        <%= image_tag('line.png',class: 'line income', width: '90', alt: '') %>
        <%= image_tag('line.png',class: 'line income-growth', width: '90', alt: '') %>
      </div>
    </div>
    <div class='column'>
      <h3><%= t 'average_portfolio' %></h3>

<div ng-controller="MainController"  class='mobile' ng-init='init()' ng-class='{"hebrew": localizationSrv.locale === "he"}'>

  <mobile-header></mobile-header>

  <div class='body'>
    <section class='hero-map'>
      <h1 class='title' translate> map_title </h1>
      <h2 class='sub-title' translate> what_would_you_like </h2>

      <div class='filters-container'>
        <div class='filter income'
             ng-click='toggleFilter("max_dividends")'
             ng-class='{"active": mapFilters.max_dividends}' translate> max_dividends </div>
        <div class='filter growth'
             ng-click='mapFilters.growth = !mapFilters.growth'
             ng-class='{"active": mapFilters.growth}' translate> max_appreciation </div>
        <div class='filter income-growth'
             ng-click='mapFilters.max_dividends_growth = !mapFilters.max_dividends_growth'
             ng-class='{"active": mapFilters.max_dividends_growth}' translate>max_dividends_appreciation</div>
      </div>
      <div class='search-container'>
        <form ng-submit="filterResults()" >
          <input id="pac-input" class="search" type="text" ng-model="mapFilters.address"
                 placeholder="{{searchPlaceholderText()}}"
                 ng-enter='searchForAsset()' ng-init="googleMaps.init()">
        </form>
      </div>
      <div class='search-info'>
        <a class='search-button' ng-click="searchForAsset()" translate>mobile_home_search</a>
      </div>
    </section>

    <section class='carousel'></section>

    <section class='how-it-works'>
      <div class='line how-it-works'></div>
      <div class='title' translate> how_it_works </div>

      <div class='column-wrap'>
        <div class='item'>
          <div class='image search'></div>
          <div class='texts-column'>
            <div class='info-title' translate> search_properties.title </div>
            <div class='row'><div class='diamond'></div><p translate> search_properties.part_1 </p></div>
            <div class='row'><div class='diamond'></div><p translate> search_properties.part_2 </p></div>
          </div>
        </div>
        <div class='item'>
          <div class='image invest'></div>
          <div class='texts-column'>
          <div class='info-title' translate> invest.title</div>
            <div class='row'><div class='diamond'></div><p translate> invest.part_1 </p></div>
            <div class='row'><div class='diamond'></div><p translate> invest.part_2 </p></div>
            <div class='row'><div class='diamond'></div><p translate> invest.part_3 </p></div>
          </div>
        </div>
        <div class='item'>
          <div class='image recieve'></div>
          <div class='texts-column'>
          <div class='info-title' translate> recieve_income.title </div>
            <div class='row'><div class='diamond'></div><p translate> recieve_income.part_1 </p></div>
            <div class='row'><div class='diamond'></div><p translate> recieve_income.part_2 </p></div>
            <div class='row'><div class='diamond'></div><p translate> recieve_income.part_3 </p></div>
          </div>
        </div>
        <div class='item'>
          <div class='image exit'></div>
          <div class='texts-column'>
          <div class='info-title' translate> exit.title </div>
            <div class='row'><div class='diamond'></div><p translate> exit.part_1 </p></div>
            <div class='row'><div class='diamond'></div><p translate> exit.part_2 </p></div>
          </div>
        </div>
      </div>
    </section>

    <section class='statistics'>
      <div class='first-row'>
        <div class='column first'>
          <h3 translate> average_portfolio </h3>
          <div class='icon portfolio' ng-class='{"hebrew": localizationSrv.locale === "he"}'></div>
          <h1 class='portfolio'>$53,327</h1>
        </div>
        <div class='ver-partitian'></div>
        <div class='column distributed'>
          <h3 translate> income_distributed </h3>
          <p class='small-remark' translate> this_month</p>
          <div class='icon distributed'></div>
          <h1>$81,173,955</h1>
        </div>
      </div>
      <div class='second-row'>
        <h3 translate>m_in_lndmrk</h3>
        <div class='pie-area'>
          <div class='pie-image'></div>
          <h2>453M</h2>
          <div ng-if='localizationSrv.locale === "en"'>
            <h4 class='growth' translate> max_appreciation </h4>
            <h4 class='income' translate> max_dividends </h4>
            <h4 class='income-growth' translate> max_dividends_appreciation </h4>
            <%= image_tag('line.png',class: 'line growth', width: '60', alt: '') %>
            <%= image_tag('line.png',class: 'line income', width: '60', alt: '') %>
            <%= image_tag('line.png',class: 'line income-growth', width: '40', alt: '') %>
          </div>
          <div ng-if='localizationSrv.locale === "he"'>
            <h4 class='growth hebrew' translate> max_appreciation </h4>
            <h4 class='income hebrew' translate> max_dividends </h4>
            <h4 class='income-growth hebrew' translate> max_dividends_appreciation </h4>
            <%= image_tag('line.png',class: 'line growth hebrew', width: '60', alt: '') %>
            <%= image_tag('line.png',class: 'line income hebrew', width: '60', alt: '') %>
            <%= image_tag('line.png',class: 'line income-growth hebrew', width: '40', alt: '') %>
          </div>
        </div>
      </div>
    </section>

    <section class='partners'>
        <div class='line'></div>
        <div class='title' translate>partners.title</div>
        <div class='partners-container'>
          <div class='partner canada'></div>
          <div class='partner cbre'></div>
          <div class='partner ey'></div>
          <div class='partner deloitte'></div>
          <div class='partner pwc'></div>
          <div class='partner kpmg'></div>
          <div class='partner goldman'></div>
          <div class='partner ubs'></div>
        </div>
    </section>

    <footer>
      <div class='row'>
        <div class='column'>
          <div class='contact-info'>contact@lndmrk.com</div>
          <div class='contact-info'>+972-578687678</div>
        </div>
        <div class='column'>
          <div class='contact-info'>122 Jmhh St.</div>
          <div class='contact-info'>Ffnsdnn, Israel</div>
        </div>
      </div>
